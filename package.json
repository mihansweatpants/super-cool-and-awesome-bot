{
  "name": "ts-starter",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.13",
    "@types/jsdom": "^12.2.3",
    "@types/luxon": "^1.15.1",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^12.0.2",
    "@types/node-fetch": "^2.3.6",
    "@types/node-telegram-bot-api": "^0.31.0",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "onchange": "^6.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsdom": "^15.1.1",
    "luxon": "^1.16.0",
    "module-alias": "^2.2.0",
    "mongoose": "^5.7.5",
    "node-fetch": "^2.6.0",
    "node-telegram-bot-api": "^0.30.0"
  },
  "scripts": {
    "dev": "concurrently -n=ts-node,tslint -c=blue,red \"nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts\" \"yarn lint\" ",
    "tslint": "tslint -c tslint.json -p tsconfig.json --force",
    "lint": "yarn tslint && onchange 'src/**/*.*' -- yarn tslint",
    "test": "jest",
    "start": "ts-node -T src/app.ts"
  },
  "_moduleAliases": {
    "~": "src"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^~(.*)$": "<rootDir>/src$1"
    }
  }
}
