{
  "name": "bot-mikhail",
  "version": "1.0.0",
  "description": "Dumb bot that tries to generate reminders. Just a little project to learn new random stuff.",
  "main": "main.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "NODE_ENV=production node dist",
    "prestart": "npm run -s build",
    "build": "webpack --mode production",
    "test": "jest --detectOpenHandles --forceExit",
    "build:dev": "webpack --mode development",
    "start:dev": "NODE_ENV=development concurrently -c blue,cyan,magenta \"webpack --mode development\" \"if [ ! -f dist/bundle.js ]; then sleep 4; fi; nodemon dist\""
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/jsdom": "^12.2.3",
    "@types/moment-timezone": "^0.5.9",
    "@types/mongoose": "^5.3.2",
    "@types/node": "^10.12.10",
    "@types/node-fetch": "^2.1.4",
    "@types/node-schedule": "^1.2.2",
    "@types/node-telegram-bot-api": "^0.30.4",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.0",
    "dotenv-webpack": "^1.5.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "jsdom": "^14.0.0",
    "moment": "^2.22.2",
    "moment-timezone": "^0.5.21",
    "mongoose": "^5.2.9",
    "node-fetch": "^2.2.0",
    "node-schedule": "^1.3.0",
    "node-telegram-bot-api": "^0.30.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^helpers$": "<rootDir>/src/helpers/functions.ts",
      "^features(.*)$": "<rootDir>/src/features$1",
      "^@root(.*)$": "<rootDir>/src$1"
    },
    "globalSetup": "<rootDir>/scripts/testSetupt.js"
  }
}
